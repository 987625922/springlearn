    <!-- 注解事务的使用（推荐使用，上面的xml事务只供学习） -->
    <!-- 开启以注解的方式实现事务控制 -->
    <tx:annotation-driven transaction-manager="txManage"/>
    <!-- =============  spring事务配置 ================ -->

    <!-- jdbc配置结束  -->
</beans>