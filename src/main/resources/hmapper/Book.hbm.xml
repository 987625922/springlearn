<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.wind.spring.bean">
    <!--
        name：即实体类的全名
        table：映射到数据库里面的那个表的名称
        catalog：数据库的名称
     -->
    <class name="HBook" table="hbook">
        <!-- class下必须要有一个id的子元素 -->
        <!-- id是用于描述主键的 -->
        <!--主键映射，属性名为book_id，列名也为book_id-->
        <id name="book_id" column="book_id">
            <!--根据底层数据库主键自动增长-->
            <generator class="native"/>
        </id>

        <!--
            使用property来描述属性与字段的对应关系
            如果length忽略不写，且你的表是自动创建这种方案，那么length的默认长度是255
        -->
        <!--非主键映射，属性和列名一一对应-->
        <property name="name" column="name" length="100"></property>
        <property name="number" column="number" length="100"></property>
    </class>
</hibernate-mapping>