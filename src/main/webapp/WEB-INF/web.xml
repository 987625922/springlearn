    <!--    使用下面这个servlet，需要注释前面的dispatcher，防止监听所有网络请求-->
    <!--    servlet原始的使用-->
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>com.wind.java.servlet.HttpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/myservlet</url-pattern>
    </servlet-mapping>
    <context-param>
        <param-name>paramMame</param-name>
        <param-value>paramValue</param-value>
    </context-param>

    <servlet>
        <servlet-name>getShare</servlet-name>
        <servlet-class>com.wind.java.servlet.GetShareRequser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getShare</servlet-name>
        <url-pattern>/getshare</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>myFilter</filter-name>
        <filter-class>com.wind.java.servlet.MyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>myFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>com.wind.java.servlet.MyListener</listener-class>
    </listener>
    <!--    servlet原始的使用 end-->

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- 中文过滤器 -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <!-- 设置编码格式 -->
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>